extend type Mutation {
  attributeCreate(input: AttributeCreateInput!): AttributeCreate @hasRoleAny(roles: [shop_admin, shop_staff])
  attributeDelete(id: String!): AttributeDelete @hasRoleAny(roles: [shop_admin, shop_staff])
  attributeUpdate(id: String!, input: AttributeUpdateInput!): AttributeUpdate @hasRoleAny(roles: [shop_admin, shop_staff])
  attributeTranslate(id: String!, input: NameTranslationInput!, languageCode: LanguageCodeEnum!): AttributeTranslate @authenticated
  attributeBulkDelete(ids: [String!]!): AttributeBulkDelete @hasRoleAny(roles: [shop_admin, shop_staff])
  attributeValueBulkDelete(ids: [String!]!): AttributeValueBulkDelete @hasRoleAny(roles: [shop_admin, shop_staff])
  attributeValueCreate(attributeID: String!, input: AttributeValueCreateInput!): AttributeValueCreate @authenticated
  attributeValueDelete(id: String!): AttributeValueDelete @hasRoleAny(roles: [shop_admin, shop_staff])
  attributeValueUpdate(id: String!, input: AttributeValueUpdateInput!): AttributeValueUpdate @hasRoleAny(roles: [shop_admin, shop_staff])
  attributeValueTranslate(id: String!, input: AttributeValueTranslationInput!, languageCode: LanguageCodeEnum!): AttributeValueTranslate @authenticated
  attributeReorderValues(attributeId: String!, moves: [ReorderInput]!): AttributeReorderValues @hasRoleAny(roles: [shop_admin, shop_staff])
}

extend type Query {
  attributes(filter: AttributeFilterInput, sortBy: AttributeSortingInput, channelSlug: String, before: String, after: String, first: Int, last: Int): AttributeCountableConnection
  attribute(id: String, slug: String): Attribute
}

